<Window x:Class="LKS_3._0.TroopChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LKS_3._0"
        mc:Ignorable="d"
        Title="Выбор взвода" Height="150" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" HorizontalAlignment="Center" VerticalAlignment="Center">

    <StackPanel VerticalAlignment="Center" >
        <TextBlock Text="Выберите свой взвод:"  TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
        <ComboBox x:Name="CbTroop" IsEditable="True" PreviewTextInput="TbOnlyDigit_PreviewTextInput" Margin="0,20,0,0">
        </ComboBox>
        <Button x:Name="OK_Button" Content="Готово" Margin="0,20,0,0" Click="OK_Button_Click"/>
    </StackPanel>

</Window>
