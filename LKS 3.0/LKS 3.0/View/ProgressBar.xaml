<Window x:Class="LKS_3._0.View.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LKS_3._0.View"
        mc:Ignorable="d"
        Title="Ждем..." Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Операция выполняется, подождите..." HorizontalAlignment="Center"  VerticalAlignment="Top"/>
        <ProgressBar x:Name="Progress_Bar" Height="25" Margin="10,0" LargeChange="10" IsIndeterminate="True"/>
    </Grid>
</Window>
