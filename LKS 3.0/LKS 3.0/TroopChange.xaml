<Window x:Class="LKS_3._0.TroopChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LKS_3._0"
        mc:Ignorable="d"
        Title="Выбор взвода" Height="224.8" Width="300" WindowStartupLocation="CenterScreen">

    <StackPanel >
        <TextBlock Text="Выберите свой взвод:"  TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox x:Name="CbTroop" IsEditable="True">
        </ComboBox>
        <Button x:Name="OK_Button" Content="Вход" Margin="0,15,0,0" Click="OK_Button_Click"/>
        <TextBlock Text="Или создайте новый:"  TextAlignment="Center" Margin="0,15,0,0"/>
        <TextBox x:Name="TB_TroopName" Text="Номер взвода"  TextAlignment="Center" Margin="0,5,0,0"/>
        <Button x:Name="Create_Button" Content="Создать новый" Margin="0,5,0,0" Click="Create_Button_Click" />
    </StackPanel>

</Window>
