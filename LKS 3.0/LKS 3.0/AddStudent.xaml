<Window x:Class="LKS_3._0.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LKS_3._0"
        mc:Ignorable="d"
        Title="AddStudent" Height="498.833" Width="623.5">
    <Grid Margin="0,0,-8,-20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="411*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="FirstNameLabel" Content="Имя" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="MidleNameLabel" Content="Фамилия" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="LastNameLabel" Content="Отчество" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="MobailPhoneLabel" Content="Мобильный номер" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="94,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="64" UndoLimit="20" PreviewTextInput="FirstNameTextBox_PreviewTextInput"/>
        <TextBox x:Name="MibleNameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="94,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="LastNameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="94,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="MobailPhoneTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="94,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="64"/>

    </Grid>
</Window>
